{
  "name": "hackarena-backend",
  "version": "1.0.0",
  "description": "HackArena Backend API Server",
  "type": "module",
  "main": "dist/server.js",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:render": "npm run migrate:prod && npm start",
    "dev": "node --loader ts-node/esm src/server.ts",
    "watch": "tsc -w",
    "migrate": "ts-node --esm src/database/migrate.js",
    "migrate:prod": "node dist/database/migrate-prod.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.13.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.11.6",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
